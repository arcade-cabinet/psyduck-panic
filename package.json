{
  "name": "psyduck-panic",
  "version": "1.0.0",
  "description": "Psyduck Panic: Evolution Deluxe - Native mobile game with Capacitor",
  "type": "module",
  "packageManager": "pnpm@10.13.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:mobile": "vite build && pnpm cap sync",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "generate:icons": "node scripts/generate-icons.mjs",
    "prebuild": "pnpm typecheck && pnpm generate:icons",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "cap:add:ios": "pnpm cap add ios",
    "cap:add:android": "pnpm cap add android",
    "cap:sync": "pnpm cap sync",
    "cap:open:ios": "pnpm cap open ios",
    "cap:open:android": "pnpm cap open android",
    "ios": "pnpm build:mobile && pnpm cap:open:ios",
    "android": "pnpm build:mobile && pnpm cap:open:android"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arcade-cabinet/psyduck-panic.git"
  },
  "keywords": [
    "game",
    "capacitor",
    "react",
    "vite",
    "typescript",
    "mobile"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arcade-cabinet/psyduck-panic/issues"
  },
  "homepage": "https://github.com/arcade-cabinet/psyduck-panic#readme",
  "dependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/app": "^8.0.1",
    "@capacitor/core": "^8.1.0",
    "@capacitor/device": "^8.0.1",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/ios": "^8.1.0",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/screen-orientation": "^8.0.1",
    "@capacitor/status-bar": "^8.0.1",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@splinetool/react-spline": "^4.1.0",
    "@splinetool/runtime": "^1.12.57",
    "animejs": "4.3.6",
    "idb": "^8.0.3",
    "miniplex": "^2.0.0",
    "miniplex-react": "^2.0.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "three": "^0.182.0",
    "tone": "^15.1.22",
    "yuka": "^0.7.8"
  },
  "devDependencies": {
    "@bdellegrazie/playwright-sonar-reporter": "^0.4.0",
    "@biomejs/biome": "~2.4.0",
    "@capacitor/cli": "^8.1.0",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/animejs": "^3.1.13",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.182.0",
    "@types/yuka": "^0.7.4",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "jsdom": "^28.1.0",
    "playwright": "^1.58.2",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vitest-sonar-reporter": "^3.0.0"
  }
}
