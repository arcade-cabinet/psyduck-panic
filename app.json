{
  "expo": {
    "name": "Cognitive Dissonance",
    "slug": "cognitive-dissonance",
    "version": "3.0.0",
    "orientation": "landscape",
    "icon": "./public/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./public/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "arcade.cabinet.cognitivedissonance",
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Cognitive Dissonance uses the camera for AR gameplay, anchoring the platter and sphere in your physical space.",
        "NSMicrophoneUsageDescription": "Cognitive Dissonance uses the microphone for voice command accessibility features.",
        "UIRequiredDeviceCapabilities": [
          "arkit"
        ]
      }
    },
    "android": {
      "package": "arcade.cabinet.cognitivedissonance",
      "adaptiveIcon": {
        "foregroundImage": "./public/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./public/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-dev-client",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "16.0"
          },
          "android": {
            "minSdkVersion": 28,
            "compileSdkVersion": 34
          }
        }
      ]
    ]
  }
}
